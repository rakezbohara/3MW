<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="100dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mardi Khola Hydrapower"
                android:id="@+id/taskname"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Requirement : "
                android:textStyle="bold"
                android:id="@+id/totalRequirementlabel"
                android:layout_below="@+id/taskname"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="230"
                android:layout_toRightOf="@+id/totalRequirementlabel"
                android:id="@+id/totalRequirement"
                android:layout_below="@+id/taskname"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fabrication : "
                android:textStyle="bold"
                android:id="@+id/fabricationlabel"
                android:layout_below="@+id/totalRequirementlabel"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_toRightOf="@+id/fabricationlabel"
                android:id="@+id/fabrication"
                android:layout_below="@+id/totalRequirement"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erection : "
                android:textStyle="bold"
                android:id="@+id/erectionlabel"
                android:layout_toLeftOf="@+id/erection"
                android:layout_below="@+id/totalRequirementlabel"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:id="@+id/erection"
                android:layout_below="@+id/totalRequirement"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>